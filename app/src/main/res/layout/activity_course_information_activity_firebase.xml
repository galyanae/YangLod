<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:id="@+id/infoviewlinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView" />

        <TextView
            android:id="@+id/fbviewCourseHeadlineview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_course_name"
            android:textSize="20dp" />

        <RelativeLayout
            android:id="@+id/fbdaterelative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true">

            <TextView
                android:id="@+id/fbviewCoursedatetxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/fbviewCoursedateview"
                android:layout_alignParentLeft="true"
                android:text="@string/date_text"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/fbviewCoursedateview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/fbviewCoursedatetxt"
                android:hint="@string/date_format"
                android:textSize="15dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fbtimerelative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true">

            <TextView
                android:id="@+id/fbviewCoursetimetxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/fbviewCoursetimeview"
                android:layout_alignParentLeft="true"
                android:text="@string/time_text"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/fbviewCoursetimeview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/fbviewCoursetimetxt"
                android:hint="@string/time_format"
                android:textSize="15dp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/fbviewCourseSynopsysview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_course_synopsis"
            android:textSize="15dp" />

        <ScrollView
            android:id="@+id/fbviewCourseInformtionview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:scrollbars="vertical">

            <TextView
                android:id="@+id/fbviewCourseInfoview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/course_information_text"
                android:textSize="15dp" />
        </ScrollView>

        <RelativeLayout
            android:id="@+id/fbpartrelative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true">

            <TextView
                android:id="@+id/fbviewCourseParticipatorsnotxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/fbviewCourseParticipatorsno"
                android:layout_alignParentLeft="true"
                android:text="@string/max_participators_no"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/fbviewCourseParticipatorsno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/fbviewCourseParticipatorsnotxt"
                android:inputType="number" />

        </RelativeLayout>

        <TextView
            android:id="@+id/fbviewCoursehostname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/host_name"
            android:textSize="15dp" />
        <TextView
            android:id="@+id/fbRegistrationIsClosed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/registration_is_closed"
            android:textColor="#ff0004"
            android:visibility="invisible"
            android:textSize="15dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/imageView2"/>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/fbviewactivitybutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="100"
        app:layout_anchor="@id/infoviewlinearLayout"
        app:layout_anchorGravity="bottom|left|end">

        <LinearLayout
            android:id="@+id/fbviewactivitybutton1"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:layout_weight="50"
            android:weightSum="3"
            android:orientation="horizontal">

            <Button
                android:id="@+id/fbviewlistofusersbtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="bottom"
                android:enabled="true"
                android:onClick="Listofuserstbtn"
                android:background="@drawable/userslist" />

            <Button
                android:id="@+id/fbDeleteCoursebtn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:enabled="true"
                android:onClick="DeleteCourseB"
                android:background="@drawable/delete" />

            <Button
                android:id="@+id/fbviewEditCoursebtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:enabled="true"
                android:background="@drawable/edit" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fbviewactivitybutton2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:weightSum="2"
            android:orientation="horizontal">


            <Button
                android:id="@+id/fbviewregtocoursetbtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:enabled="true"
                android:onClick="RegisterCoursebtn"
                android:text="@string/register_course_btn"
                android:textStyle="bold"
                android:background="#fbff45"
                android:textSize="14dp" />


            <Button
                android:id="@+id/fbviewCancelAddCoursebtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="CancelAddCoursebtn"
                android:text="@string/return_to_main"
                android:textStyle="bold"
                android:background="#8a3aa6"
                android:textSize="14dp" />
        </LinearLayout>
    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>
