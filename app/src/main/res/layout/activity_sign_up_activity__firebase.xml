<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="@drawable/logosmall"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.goodthinking.younglod.user.SignUpActivity_Firebase">

    <LinearLayout
        android:id="@+id/Signuplayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="80"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="30"
            android:id="@+id/textView2"
            android:layout_gravity="center_horizontal" />

        <android.support.design.widget.TextInputLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_weight="10"
            android:layout_height="0dp"
           >

            <EditText
                android:id="@+id/Signup_username"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/User_name"
                android:inputType="textCapWords"
                android:maxLines="1"
                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_weight="10"
            android:layout_height="0dp"
            >

            <EditText
                android:id="@+id/Signup_userphone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/User_phone"
                android:inputType="phone"
                android:maxLines="1" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_weight="10"
            android:layout_height="0dp"
            >

            <EditText
                android:id="@+id/Signup_email"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/email_field"
                android:inputType="textEmailAddress"
                android:maxLines="1" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_weight="10"
            android:layout_height="0dp"
            >

            <EditText
                android:id="@+id/Signup_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/signup_field"
                android:inputType="textPassword"
                android:maxLines="1" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/sign_up_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:background="@drawable/round_corner_button"
            android:onClick="register"
            android:text="@string/SignUP_btn"
            android:textColor="#000000"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/reset_password_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:background="@null"
            android:onClick="gotoLoginActivity"
            android:text="@string/already_registered_btn"
            android:textAllCaps="false"
            android:textColor="#000000" />

        <Button
            android:id="@+id/skip_signup_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:background="@null"
            android:onClick="gotomainActivity"
            android:text="@string/skip_btn"
            android:textAllCaps="false"
            android:textColor="#000000" />


    </LinearLayout>

</RelativeLayout>
