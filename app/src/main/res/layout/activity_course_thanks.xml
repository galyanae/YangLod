<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.goodthinking.younglod.user.CourseThanksActivity">
    <ScrollView
        android:id="@+id/fbviewCourseInformtionview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbars="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:layout_above="@+id/ReturntoMainActivity"
            android:hint="CourseThanksnote"
            android:id="@+id/CourseThanksnote"/>
    </ScrollView>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ReturntoMainActivity"
        android:layout_alignParentBottom="true"
        android:text="@string/return_to_main"
        android:layout_alignParentRight="true"
        android:onClick="returntomain"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/GoToMyCoursesFromThanksbtn"
        android:layout_alignParentBottom="true"
        android:text="@string/go_to_my_courses"
        android:layout_alignParentLeft="true"
        android:onClick="GoToMyEventsFromThanksB"/>

</RelativeLayout>
