<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.goodthinking.younglod.user.OneCourseMainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/registereButton">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="courseHeadLine"
            android:id="@+id/courseHeadLine"
            android:layout_alignParentTop="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="courseSynopsys"
            android:id="@+id/courseSynopsysTextView"
            android:layout_below="@+id/courseHeadLine" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="CourseInfo"
            android:id="@+id/courseInfo"
            android:layout_below="@+id/courseSynopsys"
            android:layout_marginTop="61dp"/>




        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="CourseGideName"
            android:id="@+id/courseGide"
            android:layout_below="@+id/courseInfo"
            android:layout_marginTop="35dp"

             />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="CourseStartdate"
            android:id="@+id/courseStartdate"
            android:layout_below="@+id/courseGide"
            android:layout_marginTop="35dp"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="CourseEndDate"
            android:id="@+id/courseEndDate"
            android:layout_below="@+id/courseStartdate"
            android:layout_marginTop="35dp"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Coursetime"
            android:id="@+id/coursetime"
            android:layout_below="@+id/courseEndDate"
            android:layout_marginTop="35dp"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="MaxNoOfParticipetors"
            android:id="@+id/maxNoOfParticipetors"
            android:layout_below="@+id/coursetime"
            android:layout_marginTop="35dp"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="numberPrticipate"
            android:id="@+id/numberPrticipate"
            android:layout_below="@+id/maxNoOfParticipetors"
            android:layout_marginTop="35dp"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="CourseCost"
            android:id="@+id/courseCost"
            android:layout_below="@+id/numberPrticipate"
            android:layout_marginTop="35dp"

            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="CourseAudience"
            android:id="@+id/courseAudience"
            android:layout_below="@+id/courseCost"
            android:layout_marginTop="35dp"

            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="CourseLang"
            android:id="@+id/courseLang"
            android:layout_below="@+id/courseAudience"
            android:layout_marginTop="35dp"

            />
    </LinearLayout>


    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="@string/Registration_toCourse_message"
        android:onClick="registere"
        android:id="@+id/registereButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
