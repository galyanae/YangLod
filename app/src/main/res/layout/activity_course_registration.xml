<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:id="@+id/regviewlinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/rgviewmessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Registration_toCourse_message"
            android:textColor="#1a13e7"
            android:textSize="15dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/rgviewCourseHeadline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_course_name"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/rgviewCourseSynopsys"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_course_synopsis"
            android:textSize="15dp" />

        <RelativeLayout
            android:id="@+id/rgdaterelative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true">

            <TextView
                android:id="@+id/rgviewCoursedatetxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/rgviewCoursedate"
                android:layout_alignParentLeft="true"
                android:text="@string/course_date_text"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/rgviewCoursedate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/rgviewCoursedatetxt"
                android:hint="@string/date_format"
                android:textSize="15dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rgtimerelative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true">

            <TextView
                android:id="@+id/rgviewCoursetimetxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/rgviewCoursetime"
                android:layout_alignParentLeft="true"
                android:text="@string/course_time_text"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/rgviewCoursetime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/rgviewCoursetimetxt"
                android:hint="@string/time_format"
                android:textSize="15dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rgusernamerelative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true">

            <TextView
                android:id="@+id/rgviewusernametxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/rgviewUsername"
                android:layout_alignParentLeft="true"
                android:text="@string/User_name"
                android:textSize="15dp" />


            <TextView
                android:id="@+id/rgviewUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/rgviewusernametxt"
                android:hint="@string/User_name"
                android:textSize="15dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rguserphonerelative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true">

            <TextView
                android:id="@+id/rgviewuserphonetxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/rgviewUserphone"
                android:layout_alignParentLeft="true"
                android:text="@string/User_phone"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/rgviewUserphone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/rgviewuserphonetxt"
                android:text="@string/User_phone"
                android:textSize="15dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rguseremailrelative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true">

            <TextView
                android:id="@+id/rgviewuseremailtxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/rgviewUseremail"
                android:layout_alignParentLeft="true"
                android:text="@string/email_field"
                android:textSize="15dp" />


            <TextView
                android:id="@+id/rgviewUseremail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/rgviewuseremailtxt"
                android:hint="@string/email_field"
                android:textSize="15dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rguserparticipatorsrelative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true">

            <TextView
                android:id="@+id/rgparticipatorstxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/rgparticipators"
                android:layout_alignParentLeft="true"
                android:text="@string/Registration_Userparticipators_no_course"
                android:textSize="15dp" />


            <EditText
                android:id="@+id/rgparticipators"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/rgparticipatorstxt"
                android:inputType="number"
                android:singleLine="true"
                android:textSize="15dp" />
        </RelativeLayout>


        <LinearLayout
            android:id="@+id/Registeractivitybutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:orientation="horizontal"
            android:weightSum="100">

            <Button
                android:id="@+id/rgviewregtocoursetbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="40"
                android:enabled="true"
                android:onClick="RegisterCoursebtn"
                android:text="@string/confirm" />

            <Button
                android:id="@+id/rgCancelbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="30"
                android:onClick="Cancelbtn"
                android:text="@string/return_to_main" />

            <Button
                android:id="@+id/rgCancelRegisterbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="40"
                android:enabled="true"
                android:onClick="CancelRegisterbtn"
                android:text="@string/cancel_registration" />

        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/Registeractivitybutton2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100"
        app:layout_anchor="@id/regviewlinearLayout"
        app:layout_anchorGravity="bottom|left|end">

        <Button
            android:id="@+id/rggotologintbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:enabled="true"
            android:onClick="loginCoursebtn"
            android:text="@string/Login_btn" />

        <Button
            android:id="@+id/rggotosignuptbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:enabled="true"
            android:onClick="signupCoursebtn"
            android:text="@string/SignUP_btn" />


    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>
